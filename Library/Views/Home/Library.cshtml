@model Library.Models.Books
@{
    ViewBag.Title = "Library";
}


<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">               
                <a href="/Home/EditBook?idBook=0" title="Add" style="padding-left:10px;"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
            </h3>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Naziv Knjige</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Zanr</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.list.Count; i++)
                {
                    <tr>
                        <td>@Model.list[i].ID_Knjige</td>
                        <td>@Model.list[i].Naziv_Knjige</td>
                        <td>@Model.list[i].Autor</td>
                        <td>@Model.list[i].Zanr</td>
                        <td class="rcOption">
                            <a href="/Home/EditBook?idBook=@Model.list[i].ID_Knjige" title="Edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href="/Home/DeleteBook?id=@Model.list[i].ID_Knjige" title="Delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

